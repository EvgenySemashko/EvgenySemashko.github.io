{
  "compilerOptions": {
    "target": "es2017",                         
    "module": "commonjs",                     
    "outDir": "./dist",                        
    "rootDir": "./src",                      
    "strict": false,                          
    "strictPropertyInitialization": false,  
    "baseUrl": "./",                                      
    "esModuleInterop": true,               
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,       
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": false,
		"resolveJsonModule": true
  }
}